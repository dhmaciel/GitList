<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/vertical_margin">

        <LinearLayout
            android:id="@+id/linear_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_repo_img_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/image_horizontal_margin"
                android:paddingLeft="@dimen/image_horizontal_margin"
                android:paddingRight="@dimen/image_horizontal_margin"
                android:paddingTop="@dimen/image_vertical_margin"
                android:src="@mipmap/ic_action_device_now_wallpaper" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_repo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linear_repo"
            android:orientation="vertical"
            android:paddingTop="@dimen/image_vertical_margin">

            <TextView
                android:id="@+id/txt_repo_nome_repo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_title"
                android:text="RXReactive"
                 />

            <TextView
                android:id="@+id/txt_repo_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_secondary"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@+id/txt_repo_nome_repo"
                android:text="Juca" />

            <TextView
                android:id="@+id/txt_repo_desc_repo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Lorem ipsum dolor sit amet jihreiuhirghwreger" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_repo_info"
            android:layout_toRightOf="@+id/linear_repo">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star" />

            <TextView
                android:id="@+id/txt_repo_qtd_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:text="85421" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_git_fork_512" />

            <TextView
                android:id="@+id/txt_repo_qtd_fork"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:text="85421" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

